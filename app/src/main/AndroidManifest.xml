<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />



    <application
        android:name=".GithubRepoApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/coptic_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/coptic_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.GitHubRepos"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.GitHubRepos">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="facebook_app_id"/>
        <meta-data android:name="com.facebook.sdk.ClientToken" android:value="facebook_client_token"/>
    </application>

</manifest>